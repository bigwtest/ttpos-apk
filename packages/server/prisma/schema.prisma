generator client {
  provider   = "dart run orm"
  output     = "../lib/prisma"
  engineType = "flutter"
}

datasource db {
  provider  = "sqlite"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model Order {
  id    String  @id @default(uuid())
  title String
  done  Boolean @default(false)

  Foods Food[]
}

model Food {
  id    String @id @default(uuid())
  name  String
  price Int

  Orders Order[]
}
